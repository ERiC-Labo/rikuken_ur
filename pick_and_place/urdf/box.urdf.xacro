<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="box">
    <xacro:macro name="box_macro" params="suffix box_size x y">

    <material name="red">
        <color rgba="1.0 0.0 0.0 2.0"/>
    </material>
    
    <joint name="world_${suffix}_joint" type="revolute">
        <origin xyz="${x} ${y} 0.03" rpy="0.0 0.0 0.0"/>
        <parent link="world_link"/>
        <child link="box_${suffix}_link"/>
    </joint>

    <link name="box_${suffix}_link">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="${box_size} ${box_size} ${box_size}"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="${box_size} ${box_size} ${box_size}"/>
            </geometry>
            <material name="red"/>
        </visual>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.03"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link> 
    
    <gazebo reference="box_link">
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <material>Gazebo/Red</material>
    </gazebo>
</xacro:macro>
</robot>